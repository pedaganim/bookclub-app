{
  "name": "bookclub-app-root",
  "version": "1.0.0",
  "description": "Bookclub App - Development Environment Scripts",
  "scripts": {
    "setup": "./dev-setup.sh",
    "install": "cd bookclub-app/backend && npm install --ignore-scripts && cd ../frontend && npm install --ignore-scripts",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd bookclub-app/backend && SLS_TELEMETRY_DISABLED=1 npm run dev",
    "dev:frontend": "cd bookclub-app/frontend && npm start",
    "seed": "cd bookclub-app/backend && npm run seed",
    "validate": "./validate-dev-env.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "private": true,
  "dependencies": {
    "yaml": "^2.8.1"
  }
}
