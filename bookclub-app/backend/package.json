{
  "name": "bookclub-backend",
  "version": "1.0.0",
  "description": "Serverless backend for BookClub application",
  "main": "index.js",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "offline": "SLS_TELEMETRY_DISABLED=1 serverless offline start",
    "dev": "SLS_TELEMETRY_DISABLED=1 IS_OFFLINE=true NODE_ENV=development AWS_ACCESS_KEY_ID=local AWS_SECRET_ACCESS_KEY=local AWS_REGION=us-east-1 AWS_DEFAULT_REGION=us-east-1 AWS_SDK_LOAD_CONFIG=0 serverless offline start --config serverless-offline.yml --stage dev",
    "seed": "node scripts/seed-data.js",
    "dev:seed": "npm run seed && npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "npm run test:coverage && open coverage/lcov-report/index.html"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "bookclub"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@aws-sdk/client-bedrock": "^3.892.0",
    "@aws-sdk/client-bedrock-runtime": "^3.891.0",
    "aws-sdk": "^2.1692.0",
    "uuid": "^9.0.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.15",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "serverless": "^3.40.0",
    "serverless-offline": "^13.8.0",
    "serverless-plugin-existing-s3": "^2.4.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js",
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/helpers/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 30,
        "branches": 21,
        "functions": 27,
        "lines": 29
      }
    },
    "coverageReporters": [
      "text",
      "html",
      "lcov",
      "json-summary"
    ]
  }
}
