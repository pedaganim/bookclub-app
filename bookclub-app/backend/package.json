{
  "name": "bookclub-backend",
  "version": "1.0.0",
  "description": "Serverless backend for BookClub application",
  "main": "index.js",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "offline": "serverless offline start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "bookclub"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.15",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.8.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js",
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": ["/node_modules/", "/__tests__/helpers/"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/__tests__/**"
    ]
  }
}
